<Window x:Class="MindScribe.LoadScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" 
        Width="500" Height="400" WindowStartupLocation="CenterScreen"
        Background="#1a236e">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="TXM SOFTWARE" 
                      Foreground="#e3e3e6" 
                      FontSize="32" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

            <TextBlock Text="MindScribe" 
                      Foreground="#e3e3e6" 
                      FontSize="24"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,40"/>

            <!-- Modern Progress Bar -->
            <Border Width="300" Height="19" Background="#3a3a4a" CornerRadius="4">
                <Border x:Name="progressFill" 
                       Width="0" 
                       Height="8" 
                       Background="#e3e3e6" 
                       CornerRadius="4"
                       HorizontalAlignment="Left"/>
            </Border>

            <TextBlock Text="A1.0.1" 
                      Foreground="#e3e3e6" 
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</Window>
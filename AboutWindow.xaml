<Window x:Class="MindScribe.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MindScribe" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1a236e">
    <Grid>
        <Border Background="#252525" Margin="20" CornerRadius="10,10,10,10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock Text="MindScribe" 
                              Foreground="#e3e3e6"
                              FontSize="24" 
                              FontWeight="Bold"/>
                    <TextBlock Text="A1.0.1" 
                              Foreground="#e3e3e6"
                              FontSize="12"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,20"/>
                </StackPanel>

                <!-- Content -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Developed by TXM SOFTWARE" 
                              Foreground="#e3e3e6"
                              FontSize="16"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <TextBlock 
                              Foreground="#a3a3b6"
                              FontSize="14"
                              HorizontalAlignment="Center"><Run Language="en-gb" Text="Made for all of you overthinkers :)"/><LineBreak/><Run Language="en-gb"/></TextBlock>
                </StackPanel>

                <!-- Footer -->
                <Button Grid.Row="2" 
                        Content="CLOSE" 
                        Width="100"
                        HorizontalAlignment="Center"
                        Background="#3a3a4a"
                        Foreground="#e3e3e6"
                        BorderThickness="0"
                        Padding="10,5"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>